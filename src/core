#!/usr/bin/env python
# Core robot logic
# This is where the decision-making happens, using the FSM.
# Other nodes, like pathfinder and manual, may
# be added for modularity.

import rospy
from std_msgs.msg import String

class URSARobot:

	def __init__(self):
		rospy.loginfo("Robot online.")
		
		rospy.set_param('collected', False) #whether we have materials to deposit or not

		while not rospy.is_shutdown():
			continue #run update method on current state

		rospy.loginfo("Shutting down.")



if __name__ == '__main__':
    try:
		rospy.init_node('core')
		URSARobot()
    except rospy.ROSInterruptException:
        pass
    
